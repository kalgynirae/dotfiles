#!/bin/sh
# Steps to setup:
# $ uci set dhcp.@dnsmasq[0].dhcpscript='/usr/local/bin/dash-button'
# $ uci commit
# $ /etc/init.d/dnsmasq restart

mode="$1" # "add", "del", or "old"
mac="$2"
ip="$3"
host="$4"
wget -O - "http://fruitron.lan:8002/dash?mode=$mode&mac=$mac&ip=$ip&host=$host" >/dev/null &
