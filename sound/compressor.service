[Unit]
Description=Calf Sidechain Compressor
After=pulseaudio.service jack.service
BindsTo=jack.service
StartLimitBurst=3
StartLimitIntervalSec=15s

[Service]
ExecStart=/usr/bin/calfjackhost --client compressor --load %h/dotfiles/sound/compressor.xml --no-tray
ExecStartPost=/usr/bin/sleep 6
ExecStartPost=%h/dotfiles/sound/compressor-connect
Restart=always
RestartSec=1s

[Install]
WantedBy=default.target
