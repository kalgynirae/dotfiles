* {
  border-radius: 0;
  min-height: 0;
}

#waybar {
{{#dark-theme}}
  background: rgba(0, 0, 0, 0.5);
  color: #d1d2d0;
  text-shadow: 0.5px 0.5px 0 black;
{{/dark-theme}}
{{^dark-theme}}
  background: rgba(0, 0, 0, 0.4);
  color: white;
  text-shadow: 0 0 2px black;
{{/dark-theme}}
  font-family: "Source Sans Pro", "Font Awesome 5 Pro Solid";
  font-size: 16px;
  font-weight: 600;
}

label {
  margin: 0 8px;
}

.full {
  color: #4e9a06;
}
.warning {
  color: #c4a800;
}
.critical {
  color: #c81f1f;
}

#workspaces button {
  color: #6f6f6b;
  padding: 0;
  border-bottom: 2px solid transparent;
}
#workspaces button.focused {
  color: inherit;
  font-weight: 800;
}
#workspaces button.urgent {
  color: #f6db4a;
  font-weight: 800;
}

#mode {
  color: #069a98;
}

#tray {
  margin-right: 12px;
}

#idle_inhibitor {
  color: #6f6f6b;
  font-size: 12px;
  padding: 0 2px;
}
#idle_inhibitor.activated {
  color: inherit;
}
