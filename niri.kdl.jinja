environment {
    DISPLAY ":0"
    GTK_IM_MODULE "simple"
}

input {
    keyboard {
        xkb {
            layout "us"
            options "caps:ctrl_modifier,compose:ralt"
        }
        numlock
        repeat-delay {{ keyrepeat_delay }}
        repeat-rate {{ keyrepeat_rate }}
    }
    touchpad {
        click-method "clickfinger"
        dwt
        natural-scroll
        tap
    }
    warp-mouse-to-focus
}

output "PNP(BNQ) BenQ RD280U S5R0002001Q" {
    scale 1.5
    backdrop-color "#454850"
}

{% if host == "iroh" %}
output "eDP-1" {
    scale 1.0
    backdrop-color "#454850"
}
{% endif %}

{% if host == "colinchan-arch" %}
output "Acer Technologies XZ322QU V3 251306FD63W01" {
    mode "2560x1440@119.998"
    scale 1.0
    position x=0 y=0
}
output "eDP-1" {
    scale 1.5
    position x=2560 y=240
}
{% endif %}

layout {
    background-color "#58606c"
    gaps {{ window_gap }}
    preset-column-widths {
        proportion 0.33
        proportion 0.5
        proportion 0.67
    }
    default-column-width { proportion 0.5; }
    always-center-single-column
    focus-ring {
        width 4
        active-color "#ff4080"
        inactive-color "#505460"
    }
    shadow {
        on
        softness {{ window_gap }}
        spread {{ window_gap // 3 }}
        offset x=0 y={{ window_gap // 6 }}
        color "#000000ff"
    }
    struts {
        left {{ window_gap * 3 // 2 }}
        right {{ window_gap * 3 // 2 }}
    }
    tab-indicator {
        gap {{ window_gap // -2 }}
        gaps-between-tabs 3
        length total-proportion=0.2
        width 6
        position "left"
    }
}

cursor {
    xcursor-theme "{{ cursor_theme }}"
    xcursor-size {{ cursor_size }}
    hide-when-typing
}

hotkey-overlay {
    skip-at-startup
}

gestures {
    hot-corners {
        off
    }
}

prefer-no-csd
screenshot-path "~/pictures/screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

spawn-at-startup "systemctl" "--user" "start" "gammastep.service"
spawn-at-startup "systemctl" "--user" "start" "kdeconnect-indicator.service"
spawn-at-startup "systemctl" "--user" "start" "mako.service"
spawn-at-startup "systemctl" "--user" "start" "polkit-gnome.service"
spawn-at-startup "systemctl" "--user" "start" "swayidle.service"
spawn-at-startup "systemctl" "--user" "start" "swayosd.service"
spawn-at-startup "systemctl" "--user" "start" "swww.service"
spawn-at-startup "systemctl" "--user" "start" "waybar.service"
spawn-at-startup "systemctl" "--user" "start" "xwayland-satellite.service"

binds {
    Mod+Shift+Slash { show-hotkey-overlay; }
    Mod+O repeat=false { toggle-overview; }

    Mod+Q hotkey-overlay-title="Close Window" { close-window; }

    // Windows
    Mod+H hotkey-overlay-title="Focus left" { focus-column-left; }
    Mod+L hotkey-overlay-title="Focus right" { focus-column-right; }
    Mod+J hotkey-overlay-title="Focus down" { focus-window-down; }
    Mod+K hotkey-overlay-title="Focus up" { focus-window-up; }
    Mod+Shift+H hotkey-overlay-title="Move Column left" { move-column-left; }
    Mod+Shift+L hotkey-overlay-title="Move Column right" { move-column-right; }
    Mod+Shift+J hotkey-overlay-title="Move Window down" { move-window-down-or-to-workspace-down; }
    Mod+Shift+K hotkey-overlay-title="Move Window up" { move-window-up-or-to-workspace-up; }
    Mod+Home { focus-column-first; }
    Mod+End { focus-column-last; }
    Mod+Shift+Home { move-column-to-first; }
    Mod+Shift+End { move-column-to-last; }

    Mod+WheelScrollUp { focus-column-left; }
    Mod+WheelScrollDown { focus-column-right; }
    Mod+Shift+WheelScrollUp { move-column-left; }
    Mod+Shift+WheelScrollDown { move-column-right; }

    // Workspaces
    Mod+Ctrl+J hotkey-overlay-title="Focus down (workspace)" { focus-workspace-down; }
    Mod+Ctrl+K hotkey-overlay-title="Focus up (workspace)" { focus-workspace-up; }
    Mod+Shift+Ctrl+J hotkey-overlay-title="Move down (workspace)" { move-workspace-down; }
    Mod+Shift+Ctrl+K hotkey-overlay-title="Move up (workspace)" { move-workspace-up; }
    Mod+Ctrl+WheelScrollUp { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown { focus-workspace-down; }
    Mod+Shift+Ctrl+WheelScrollUp { move-workspace-up; }
    Mod+Shift+Ctrl+WheelScrollDown { move-workspace-down; }

    // Monitors
    Mod+N hotkey-overlay-title="Focus next monitor" { focus-monitor-next; }
    Mod+P hotkey-overlay-title="Focus previous monitor" { focus-monitor-previous; }
    Mod+Shift+N hotkey-overlay-title="Move next monitor (column)" { move-column-to-monitor-next; }
    Mod+Shift+P hotkey-overlay-title="Move previous monitor (column)" { move-column-to-monitor-previous; }
    Mod+Shift+Ctrl+N hotkey-overlay-title="Move next monitor (column)" { move-workspace-to-monitor-next; }
    Mod+Shift+Ctrl+P hotkey-overlay-title="Move previous monitor (column)" { move-workspace-to-monitor-previous; }
    Mod+WheelScrollLeft { focus-monitor-left; }
    Mod+WheelScrollRight { focus-monitor-right; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }

    Mod+BracketLeft { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }
    Mod+Comma { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    Mod+U { switch-preset-column-width; }
    Mod+Shift+U { expand-column-to-available-width; }
    Mod+I { switch-preset-window-height; }
    Mod+Shift+I { reset-window-height; }
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Alt+Minus { set-window-height "-10%"; }
    Mod+Alt+Equal { set-window-height "+10%"; }
    Mod+M { maximize-column; }
    Mod+F { fullscreen-window; }
    Mod+Shift+F { toggle-windowed-fullscreen; }
    Mod+Y { center-column; }
    Mod+Shift+Y { center-visible-columns; }

    Mod+Shift+Space { toggle-window-floating; }
    Mod+Tab { switch-focus-between-floating-and-tiling; }

    Mod+W { toggle-column-tabbed-display; }

    Print { screenshot-screen; }
    Shift+Print { screenshot; }
    Super+Print { screenshot-window; }
    Alt+Print { spawn "screenshot" "--region" "--text"; }
    XF86Tools { spawn "sh" "-c" "hyprpicker | tr '[:upper:]' '[:lower:]' | wl-copy -n"; }

    Mod+Shift+Q { quit; }
    Ctrl+Alt+Delete { quit; }
    Mod+Shift+S { spawn "shutdown-prompt"; }
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Backspace hotkey-overlay-title="Lock the screen" { spawn "systemctl" "--user" "kill" "--signal" "USR1" "swayidle"; }
    Mod+Alt+Backspace { power-off-monitors; }

    Mod+Return hotkey-overlay-title="Open terminal (new)" { spawn "terminal"; }
    Mod+Shift+Return hotkey-overlay-title="Open terminal (split)" { spawn "terminal" "--same-dir" "--split"; }
    Mod+Space hotkey-overlay-title="Open app launcher" { spawn "fuzzel"; }
    Mod+T hotkey-overlay-title="Open file browser" { spawn "nautilus"; }
    Mod+B hotkey-overlay-title="Open web browser" { spawn "web-browser"; }
    Mod+V hotkey-overlay-title="Open audio mixer" { spawn "pwvucontrol"; }

    Mod+C hotkey-overlay-title="Dismiss notification" { spawn "makoctl" "dismiss"; }
    Mod+Shift+C hotkey-overlay-title="Restore notification" { spawn "makoctl" "restore"; }
    XF86AudioRaiseVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "+5" "--max-volume" "130"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "-5" "--max-volume" "130"; }
    XF86AudioMute        allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    XF86MonBrightnessUp allow-when-locked=true { spawn "swayosd-client" "--brightness" "+10"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "swayosd-client" "--brightness" "-10"; }
    XF86Launch6 { spawn "microphone" "toggle"; }
}

// Work around WezTerm's initial configure bug
// by setting an empty default-column-width.
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// Open the Firefox picture-in-picture player as floating by default.
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

window-rule {
    geometry-corner-radius {{ window_gap * 2 // 3 }}
    clip-to-geometry true
}

// Steam notifications
window-rule {
    match app-id="steam" title=r#"^notificationtoasts_\d+_desktop$"#
    default-floating-position x=10 y=10 relative-to="top-right"
    open-focused false
}
