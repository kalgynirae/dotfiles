[alias]
	amend = commit --amend --no-edit
	diffc = diff --cached
	edit = commit --amend --only
	ff = merge --ff-only
	graph = log --all --graph --pretty=format:'%C(auto)%h %s%n%C(cyan)%an%C(blue) %cr%C(auto)%d%C(reset)%n'
	logg = log --graph --decorate
	noff = merge --no-ff
        pushf = push --force-with-lease
	pushu = push --set-upstream origin HEAD
[color]
	ui = true
[commit]
	verbose = true
[core]
	excludesfile = ~/dotfiles/gitignore
[diff]
	renames = true
[difftool "diff-pdf"]
	cmd = "diff-pdf --view \"$LOCAL\" \"$REMOTE\""
[merge]
	conflictstyle = zdiff3
[pull]
	ff = only
[user]
	name = Colin Chan
	email = colin@pylonlending.com
[init]
	defaultBranch = main
[advice]
	detachedHead = false
[push]
	autoSetupRemote = true
	recurseSubmodules = on-demand
