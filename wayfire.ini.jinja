[input]
cursor_theme = {{ cursor_theme }}
cursor_size = {{ cursor_size }}

disable_touchpad_while_typing = true
kb_numlock_default_state = true
kb_repeat_delay = 145
kb_repeat_rate = 55
xkb_layout = us
xkb_options = caps:ctrl_modifier,compose:ralt

{% if host == "colinchan-fedora" %}
[output:eDP-1]
position = 0,1080

[output:DP-2]
position = 1920,0

[output:DP-3]
position = 5760,0
transform = 90
{% endif %}

{% if host == "apartmantwo" %}
[output:DP-5]
position = 0,0

[output:DP-4]
position = 2560,0
{% endif %}

[core]
plugins = \
  alpha \
  blur \
  winshadows \
  decoration \
  animate \
  fast-switcher \
  follow-focus \
  grid \
  invert \
  move \
  oswitch \
  place \
  resize \
  scale \
  simple-tile \
  vswitch \
  wrot \
  zoom \
  autostart \
  command \
  window-rules \
  wm-actions

close_top_view = <super> KEY_GRAVE
vwidth = 1
vheight = 3
preferred_decoration_mode = server

[move]
activate = <super> BTN_LEFT
enable_snap = false

[resize]
activate = <super> BTN_RIGHT

[zoom]
modifier = <super>

[alpha]
modifier = <super> <alt>

[wrot]
activate = <super> <ctrl> BTN_RIGHT

[follow-focus]
focus_delay = 0
raise_on_top = false
threshold = 0

[command]
binding_quit = <super> <shift> KEY_Q
command_quit = systemctl --user stop graphical-session.target
command_shutdown = shutdown-prompt
binding_shutdown = <super> <shift> KEY_S
command_shutdown = shutdown-prompt
binding_lock = <super> KEY_BACKSPACE
command_lock = systemctl --user kill --signal USR1 swayidle
binding_screenshot = KEY_SYSRQ
command_screenshot = screenshot
binding_screenshot_region = <shift> KEY_SYSRQ
command_screenshot_region = screenshot --region
binding_screenshot_window = <super> KEY_SYSRQ
command_screenshot_window = screenshot --window
binding_dismiss = <super> KEY_C
command_dismiss = makoctl dismiss
binding_interact = <super> KEY_X
command_interact = makoctl menu wofi -d -p 'Choose Action: '

binding_terminal = <super> KEY_ENTER
command_terminal = systemd-run-launch-app {{ terminal_app }} {{ terminal_app }} -e tmux new-session
binding_terminal_no_tmux = <super> <shift> KEY_ENTER
command_terminal_no_tmux = systemd-run-launch-app {{ terminal_app }} {{ terminal_app }}
binding_terminal_direct = <super> <shift> <alt> KEY_ENTER
command_terminal_direct = {{ terminal_app }}
binding_launcher = <super> KEY_SPACE
command_launcher = applauncher
binding_browser = <super> KEY_B
command_browser = systemd-run-launch-app web-browser gtk-launch web-browser.desktop
binding_files = <super> KEY_T
command_files = systemd-run-launch-app nautilus gtk-launch org.gnome.Nautilus.desktop
binding_volume = <super> KEY_V
command_volume = systemd-run-launch-app pavucontrol gtk-launch pavucontrol.desktop

[wm-actions]
toggle_always_on_top = <super> <alt> KEY_SPACE
toggle_fullscreen = <super> KEY_F
toggle_maximize = <super> KEY_M
toggle_sticky = <super> <ctrl> KEY_SPACE

[simple-tile]
key_toggle = <super> <shift> KEY_SPACE
inner_gap_size = 12
outer_horiz_gap_size = 24
outer_vert_gap_size = 24
animation_duration = 100
tile_by_default = none

[vswitch]
binding_left =
binding_right =
binding_up = <super> KEY_K
binding_down = <super> KEY_J
binding_win_left =
binding_win_right =
binding_win_up = <super> <shift> KEY_K
binding_win_down = <super> <shift> KEY_J
duration = 150

[fast-switcher]
activate = <super> KEY_L
activate_backward = <super> KEY_H
inactive_alpha = 0.5

[scale]
toggle_all = <super>
duration = 150
inactive_alpha = 0.6
title_font_size = 20

[oswitch]
next_output = <super> KEY_O
next_output_with_win = <super> <shift> KEY_O

[invert]
toggle = <super> KEY_I

[grid]
duration = 100

[animate]
duration = 100
open_animation = fade
close_animation = fade

[decoration]
active_color = 0.0 0.6 0.1 0.7
inactive_color = 0.3 0.3 0.3 0.4
border_size = 3
button_order =
font = Source Sans Pro
title_height = 16

[blur]
blur_by_default = type is "toplevel" | type is "panel"
saturation = 1.0
kawase_offset = 3
kawase_degrade = 6
kawase_iterations = 2

[winshadows]
enabled_views = floating is true & (type is "toplevel" | type is "overlay")
include_undecorated_views = true
shadow_color = 0.0 0.0 0.0 0.6
shadow_radius = 48
shadow_emissiveness = 0.0

[autostart]
autostart_wf_shell = false
update_systemd_env = dbus-update-activation-environment --systemd DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XCURSOR_SIZE XCURSOR_THEME; systemd-notify --ready
