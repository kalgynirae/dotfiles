draw_bold_text_with_bright_colors: false

font:
  normal:
    family: Iosevka Term
  size: 14

key_bindings:
  - { key: Plus, mods: Control|Shift, action: IncreaseFontSize }
  - { key: Equals, mods: Control, action: None }

mouse:
  hide_when_typing: true

mouse_bindings:
  - { mouse: 275, chars: "\x1b[A" }
  - { mouse: 276, chars: "\x1b[B" }
  - { mouse: 277, action: Paste }

scrolling:
  multiplier: 5

selection:
  save_to_clipboard: true

window:
  dynamic_padding: true
  opacity: {{#dark-theme}}0.97{{/dark-theme}}{{^dark-theme}}1{{/dark-theme}}
