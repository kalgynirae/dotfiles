# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
floating_modifier $mod

font pango:monospace 8

bindsym $mod+Escape kill
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+space exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+a focus parent
bindsym $mod+d focus child
bindsym $mod+` focus mode_toggle
bindsym $mod+f fullscreen
bindsym $mod+g split h
bindsym $mod+v split v
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit

mode "move container" {
    bindsym h move left
    bindsym j move down
    bindsym k move up
    bindsym l move right
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "move container"

mode "move workspace" {
    bindsym h move workspace to output left
    bindsym j move workspace to output down
    bindsym k move workspace to output up
    bindsym l move workspace to output right
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "move workspace"

mode "resize" {
    bindsym h resize shrink width 20 px or 5 ppt
    bindsym j resize grow height 20 px or 5 ppt
    bindsym k resize shrink height 20 px or 5 ppt
    bindsym l resize grow width 20 px or 5 ppt
    bindsym Mod1+h resize shrink width 4 px or 1 ppt
    bindsym Mod1+j resize grow height 4 px or 1 ppt
    bindsym Mod1+k resize shrink height 4 px or 1 ppt
    bindsym Mod1+l resize grow width 4 px or 1 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# COLORS
set $bg1 #505050
set $bg2 #303030
set $bg3 #181818
set $text #d3d7cf
set $text2 #a0a0a0
set $line #555753
set $yellow1 #fce94f
set $yellow2 #edd400
set $yellow3 #c4a000
set $green1 #8ae234
set $green2 #73d216
set $green3 #4e9a06
set $orange1 #fcaf3e
set $orange2 #f57900
set $orange3 #ce5c00
set $blue1 #729fcf
set $blue2 #3465a4
set $blue3 #204a87
set $purple1 #ad7fa8
set $purple2 #75507b
set $purple3 #5c3566
set $brown1 #e9b96e
set $brown2 #c17d11
set $brown3 #8f5902
set $red1 #ef2929
set $red2 #cc0000
set $red3 #a40000

bar {
    position top
    status_command i3status | /home/lumpy/python/i3-weather/weather.py 12797128 --wrap-i3-status --position 0 --unit C --update-interval 300 --format '{city}: {text}, {temp}Â°{unit}'
    colors {
        background $bg3
        separator $line
        statusline $text

        focused_workspace $blue2 $blue3 $text
        active_workspace $line $bg1 $text2
        inactive_workspace $line $bg2 $text2
        urgent_workspace $red1 $red2 $text
    }
}

# class                 border  backgr. text    indicator
client.focused          $blue2  $blue3  $text   $yellow2
client.focused_inactive $line   $bg1    $text2  $bg2
client.unfocused        $line   $bg2    $text2  $bg1
client.urgent           $red1   $red2   $text   $yellow2

bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight - 10 -time 100
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight + 10 -time 100
bindsym XF86AudioRaiseVolume exec --no-startup-id /home/lumpy/dotfiles/lumeh-scripts/volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id /home/lumpy/dotfiles/lumeh-scripts/volume.sh down
bindsym XF86AudioMute exec --no-startup-id /home/lumpy/dotfiles/lumeh-scripts/volume.sh mute
bindsym $mod+Shift+Return exec gnome-terminal -e /home/lumpy/dotfiles/lumeh-scripts/calculator
bindsym Ctrl+Mod1+f exec firefox
bindsym XF86ScreenSaver exec --no-startup-id dm-tool lock
bindsym Shift+XF86ScreenSaver exec --no-startup-id dm-tool lock && systemctl suspend
bindsym XF86Display exec --no-startup-id /home/lumpy/dotfiles/lumeh-scripts/refresh-monitors

# Soundboard
bindsym $mod+F1 exec --no-startup-id /home/lumpy/bin/buzzer
#bindsym $mod+F5 exec --no-startup-id ssh colin@fruitron /home/colin/bin/buzzer

for_window [window_role="conversation"] floating enable
for_window [class="Wine"] floating enable

# Startup programs
exec --no-startup-id sxhkdrc
exec --no-startup-id /home/lumpy/dotfiles/lumeh-scripts/refresh-monitors
exec --no-startup-id xmodmap -e 'add mod3 = Scroll_Lock'
exec --no-startup-id pidgin
exec --no-startup-id pulseaudio --start
