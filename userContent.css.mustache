/* Hide Notifications button while on chat pages */
@-moz-document url-prefix("https://fb.workplace.com/chat") {
  ul[aria-label="Workplace apps"] > li:nth-child(1) {
    display: none !important;
  }
  ul[aria-label="Workplace apps"] > li:nth-child(2) {
    display: none !important;
  }
}

/* Hide Chat button while on non-chat pages */
@-moz-document url-prefix("https://fb.workplace.com/groups"), url("https://fb.workplace.com") {
  ul[aria-label="Workplace apps"] > li:nth-child(3) {
    display: none !important;
  }
}
