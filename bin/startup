#!/bin/bash

pgrep sxhkd || sxhkd &

pgrep redshift || redshift -l 37.48:-122.15 -t 5850:2800 &
#pgrep redshift || redshift -l 27.75:-82.63 -t 5850:2800 &

pgrep compton || compton -CGb --no-fading-openclose --unredir-if-possible

screensaver on

pgrep polkit-gnome-au || /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

pulseaudio --check || pulseaudio --start &

pgrep -f beamux-server || ~/bash/beamux/beamux-server &>/tmp/beamux-server.log &

$HOME/bin/refresh-peripherals
