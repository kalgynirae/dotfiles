#!/bin/bash

source ~/.config/backup-params

paths=(
    ~/audio
    ~/blender
    ~/code
    ~/documents
    ~/dotfiles
    ~/games
    ~/lumeh.org-files-backup
    ~/misc
    ~/music
    ~/pictures
    ~/playlists
    ~/recordings
    ~/school
    ~/scores
    ~/sheets
    ~/sounds
    ~/stepmania
    ~/videos
    /mnt/windows/Users/colin/flstudio
)

common_args=(
    --option b2.connections=8
    --password-file ~/.config/backup-password
)

if (($# == 0)); then
    args=(
        backup
        "${paths[@]}"
    )
else
    args=("$@")
fi

set -x
exec restic "${common_args[@]}" "${args[@]}"
