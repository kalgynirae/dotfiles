bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/bin/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/bin/volume down
bindsym XF86AudioMute exec --no-startup-id ~/bin/volume mute
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86Explorer exec nautilus
bindsym XF86Calculator exec nautilus
bindsym --release Print exec --no-startup-id ~/bin/screenshot
bindsym --release Shift+Print exec --no-startup-id ~/bin/screenshot --select
bindsym --release $mod+Print exec --no-startup-id ~/bin/screenshot --focused --border
bindsym XF86Tools exec --no-startup-id mplayer ~/music.mp3

